{
  "name": "vectivii",
  "displayName": "vectivii",
  "description": "Compare coding solutions from multiple AI models (GPT-4o vs Claude 3.5 Sonnet)",
  "version": "1.0.0",
  "icon": "images/icon.png",
  "author": "Jacob Cromwell",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JacobCromwell/vectasight.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Other",
    "Education"
  ],
  "keywords": [
    "ai",
    "copilot",
    "gpt",
    "claude",
    "compare",
    "coding",
    "assistant"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "aicompare.assistant",
        "fullName": "AI Code Compare",
        "name": "aicompare", 
        "description": "Compare coding solutions from multiple AI models",
        "isSticky": true,
        "commands": [
          {
            "name": "compare",
            "description": "Compare solutions from GPT-4o and Claude 3.5 Sonnet"
          },
          {
            "name": "analyze",
            "description": "Analyze differences between AI responses"
          },
          {
            "name": "explain",
            "description": "Get explanations from both models"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "aicompare.openPanel",
        "title": "Open Chat",
        "category": "AI Compare"
      },
      {
        "command": "aicompare.compareSelection",
        "title": "Compare Selected Code",
        "category": "AI Compare"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aicompare.compareSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "AI Compare",
      "properties": {
        "aicompare.includeGoogleGemini": {
          "type": "boolean",
          "default": false,
          "description": "Include Google Gemini in comparisons (requires API key)"
        },
        "aicompare.googleApiKey": {
          "type": "string",
          "description": "Google AI API Key (optional, for Gemini comparison)",
          "scope": "machine-overridable"
        },
        "aicompare.defaultComparisonMode": {
          "type": "string",
          "enum": ["side-by-side", "unified", "analysis-only"],
          "default": "side-by-side",
          "description": "Default format for displaying comparisons"
        },
        "aicompare.showTimestamps": {
          "type": "boolean",
          "default": true,
          "description": "Show response timestamps in comparisons"
        },
        "aicompare.includeMetrics": {
          "type": "boolean", 
          "default": true,
          "description": "Include response metrics (length, code blocks, etc.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
